# AWS Configuration
AWS_REGION=us-west-2
NEXT_PUBLIC_AWS_REGION=us-west-2

# NextAuth Configuration
NEXTAUTH_URL=https://your-amplify-app-id.amplifyapp.com
NEXTAUTH_SECRET=your-nextauth-secret-key

# AWS Cognito Configuration
COGNITO_USER_POOL_ID=your-user-pool-id
COGNITO_CLIENT_ID=your-client-id
COGNITO_CLIENT_SECRET=your-client-secret
COGNITO_IDENTITY_POOL_ID=your-identity-pool-id
NEXT_PUBLIC_USER_POOL_ID=your-user-pool-id
NEXT_PUBLIC_USER_POOL_CLIENT_ID=your-client-id
NEXT_PUBLIC_IDENTITY_POOL_ID=your-identity-pool-id

# DynamoDB Configuration
DYNAMODB_TABLE_NAME=team-calendar-sync-us-west-2
NEXT_PUBLIC_DYNAMODB_TABLE_NAME=team-calendar-sync-us-west-2

# Application Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-amplify-app-id.amplifyapp.com
NEXT_PUBLIC_API_URL=https://your-amplify-app-id.amplifyapp.com/api

# Security Configuration
ENCRYPTION_KEY=your-encryption-key
JWT_SECRET=your-jwt-secret

# Feature Flags
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_OFFLINE=true