# Production Environment Variables

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_NAME="团队日历同步器"

# Monitoring and Logging
NEXT_PUBLIC_ENABLE_MONITORING=true
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_LOG_LEVEL=info

# Error Tracking (optional - for external services like Sentry)
# NEXT_PUBLIC_ERROR_TRACKING_ENDPOINT=https://your-error-tracking-service.com/api/errors
# NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Performance Monitoring
NEXT_PUBLIC_PERFORMANCE_SAMPLE_RATE=0.1
NEXT_PUBLIC_ERROR_SAMPLE_RATE=0.1

# CDN and Caching
NEXT_PUBLIC_CDN_URL=https://your-cdn.com
NEXT_PUBLIC_STATIC_CACHE_TTL=31536000

# Security
NEXT_PUBLIC_CSP_REPORT_URI=/api/security/csp-violation
NEXT_PUBLIC_ENABLE_SECURITY_HEADERS=true

# Analytics (optional)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_HOTJAR_ID=your-hotjar-id

# AWS Configuration (for production deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# DynamoDB
DYNAMODB_TABLE_NAME=TeamCalendarSync-Production
DYNAMODB_REGION=us-east-1

# NextAuth
NEXTAUTH_URL=https://your-production-domain.com
NEXTAUTH_SECRET=your-production-secret

# Cognito
COGNITO_USER_POOL_ID=your-production-user-pool-id
COGNITO_CLIENT_ID=your-production-client-id
COGNITO_CLIENT_SECRET=your-production-client-secret
COGNITO_REGION=us-east-1

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Feature Flags
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=false